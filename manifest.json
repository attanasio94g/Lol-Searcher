{
  "manifest_version": 2,

  "name": "Op.gg",
  "options_page": "settings.html",
  "description": "Simple extension for Opera and Chrome that open a page of Op.gg with a defined nickname.",
  "version": "0.1",
  "background": {"scripts": ["background.js"]},

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Go to Op.gg!"
  }

}